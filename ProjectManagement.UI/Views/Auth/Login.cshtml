
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="row">
        <div class="col-md-3 col-sm-2 col-lg-4"></div>
        <div class="col-md-6 col-sm-8 col-lg-4">
            <div class="card mt-5 m-2">
                <div class="card-title text-center">
                    <span class="text-dark"> Project Management Login </span>
                </div>
                <div class="card-body">
                    <div class="row" style="text-align:center">
                        <div class="col-12 mb-3">
                            <input class="form-control" id="txtUsername" placeholder="User name" />
                        </div>

                        <div class="col-12">
                            <input class="form-control" id="txtPassword" type="password" placeholder="Password" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12 text-center">
                            <button type="button" class="btn btn-success btn-lg" onclick="Login()"> Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-2 col-lg-4"></div>
    </div>
</body>
</html>

<script>
function Login() {
        $.post('@Url.Action("Login", "Auth")',
            {
                username: $('#txtUsername').val(),
                password: $('#txtPassword').val()
            },
            function (returnedData) {
                if (returnedData) {
                    window.location.href = '@Url.Action("index", "home")'
                } else {
                   console.log("fail")
                }
            }).fail(function (message) {
                alert(message.responseText)
            });
}
</script>
