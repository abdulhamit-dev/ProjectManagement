@using ProjectManagement.UI.Models.Project
@model ProjectAddUpdateVM

<form id="add-update" asp-controller="project" asp-action="save" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />
    <div class="row gy-1">
        <div class="col-md-6">
            <label class="form-label">Project Name</label>
            <input class="form-control form-control-sm" type="text" placeholder="Project Name" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Team</label>
            <select class="form-select form-select-sm" asp-for="TeamId">
                <option value="" disabled selected>Choose Team</option>
                @foreach (var team in Model.TeamVMs)
                {
                    if (team.Id == Model.TeamId)
                    {
                        <option selected value="@team.Id">@team.Name</option>
                    }
                    else
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                }
            </select>
            <span class="text-danger" asp-validation-for="TeamId"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Project Description</label>
            <input class="form-control form-control-sm" type="text" placeholder="Project Description" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="col-md-2">
            <div class="form-check form-switch mt-4">
                <input class="form-check-input" asp-for="IsActive" type="checkbox">
                <label class="form-check-label">Active</label>
            </div>
        </div>
    </div>
</form>

<script>
    $(function () {
        jQuery.validator.unobtrusive.parse("#add-update");
    });
</script>