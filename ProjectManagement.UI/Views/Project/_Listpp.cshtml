@using ProjectManagement.UI.Models.Project
@model List<ProjectVM>

@foreach (var project in Model)
{

    <div class="col-md-4">
        <div class="card m-1">
            <div class="card-body">
                <h5 class="card-title">@project.Name</h5>
                <div class="card-text"> @project.Description </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-outline-primary btn-sm"  
                        data-bs-toggle="modal" data-bs-target="#add-update-modal" onclick="SelectProject('@project.Id')"><i class="fa-solid fa-bars-staggered"></i> Detail</button>
                
                <button class="btn btn-outline-info btn-sm" style="float:right" 
                        data-bs-toggle="modal" data-bs-target="#add-update-modal" onclick="UpdateShowModal('@project.Id')"><i class="fa-solid fa-pen"></i> Edit</button>
            </div>
        </div>
    </div>
}
